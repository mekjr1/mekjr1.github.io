# Cache-Control headers for GitHub Pages
# Note: GitHub Pages has limited support for custom headers
# This file documents recommended caching strategies

# HTML pages - short cache, must revalidate
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# CSS and JavaScript - cache for 1 year
/assets/css/*
  Cache-Control: public, max-age=31536000, immutable

/assets/js/*
  Cache-Control: public, max-age=31536000, immutable

# Images - cache for 1 year
/images/*
  Cache-Control: public, max-age=31536000, immutable

# Fonts - cache for 1 year
/assets/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# PDF files - cache for 1 month
/files/*.pdf
  Cache-Control: public, max-age=2592000

# Feed and sitemap - short cache
/feed.xml
  Cache-Control: public, max-age=3600

/sitemap.xml
  Cache-Control: public, max-age=3600
